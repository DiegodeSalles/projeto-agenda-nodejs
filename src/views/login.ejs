<div class="container">
  <div class="row">
    <h1 class="text-center">Criar conta ou fazer Login</h1>
    <p class="text-center lead">Fa√ßa login ou crie sua conta abaixo</p>

    <%- include('./includes/messages') %>
    
    <div class="row">

      <div class="col-lg my-3">
        <h4>Cadastro</h4>

        <form class="form-cadastro" action="/login/register" method="post">
          <input type="hidden" name="_csrf" value=<%= csrfToken %>>
          <div class="mb-3">
            <label class="form-label">Email</label>
            <input type="email" class="form-control" name="email">
          </div>
          <div class="mb-3">
            <label class="form-label">Senha</label>
            <input type="password" class="form-control" name="password">
          </div>
          <button type="submit" class="btn btn-primary">Criar conta</button>
        </form>
      </div>


      <div class="col-lg my-3">
        <h4>Login</h4>

        <form class="form-login" action="/login/login" method="post">
          <input type="hidden" name="_csrf" value=<%= csrfToken %>>
          <div class="mb-3">
            <label class="form-label">Email</label>
            <input type="email" class="form-control" name="email">
          </div>
          <div class="mb-3">
            <label class="form-label">Senha</label>
            <input type="password" class="form-control" name="password">
          </div>
          <button type="submit" class="btn btn-primary">Login</button>
        </form>
      </div>


    </div>
  </div>
</div>
</div>